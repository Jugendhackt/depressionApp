<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#000"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/helloTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Person, you wasted"
            android:textColor="#ff0010"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wastedLifetimePercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60%"
            android:textColor="#fff"
            android:textSize="60sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/wastedLifetimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="of your lifetime!"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/wastedLifetimeProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:max="100"
            android:progress="60" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:textColor="#ff0010"
            android:layout_marginBottom="20dp"
            android:background="#000" />


        <TextView
            android:id="@+id/countdownTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Countdown to your billionth second:"
            android:textAlignment="center"
            android:textColor="#ff0010"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countdownValueTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="540981289 seconds"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="30dp" />


        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ff0010"
            android:background="#000" />

        <TextView
            android:id="@+id/whatArchievedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What others achieved at your age:"
            android:textAlignment="center"
            android:textColor="#ff0010"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/whatArchievedTvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
            android:textSize="20sp" />

        <View
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ff0010"
            android:background="#000" />

        <TextView
            android:id="@+id/peopleDiedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People died today:"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#ff0010"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/peopleDiedCounterTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2490"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />


        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            android:onClick="clickDoNothing"
            android:text="I donÂ´t do anything!"
            android:textColor="#fff" />

    </LinearLayout>
</ScrollView>

